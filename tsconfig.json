{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES6"],
    "target": "ES2017",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "lib", "local"]
}
